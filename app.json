{
  "expo": {
    "name": "NobetciEczz",
    "slug": "NobetciEczz",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Konumunuza nöbetçi eczaneleri göstermek için erişim gerekiyor."
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nobetcieczz.app",
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": false,
        "UIStatusBarHidden": true,
        "NSLocationWhenInUseUsageDescription": "Nöbetçi eczaneleri haritada göstermek için konum izni gerekiyor.",
        "NSLocationAlwaysUsageDescription": "Arka planda çalışırken de size en yakın nöbetçi eczaneleri gösterebilmek için konum izni gerekiyor.",
        "usesNonExemptEncryption": false
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.nobetcieczz.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "androidStatusBar": {
        "backgroundColor": "#E53935",
        "translucent": true,
        "barStyle": "light-content",
        "hidden": true
      },
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "experiments": {
      "typedRoutes": true
    }
  }
}
